# Direnv configuration for automatic environment loading
use flake

# Load environment variables from .env if it exists
if [[ -f .env ]]; then
    source_env .env
fi

# Set default environment variables
export CGO_ENABLED=1
export GOOGLE_BOOKS_API_KEY=${GOOGLE_BOOKS_API_KEY:-}

# Ensure directories exist
mkdir -p bin hugo-site Data/IMGS/iPhone/Recents

echo "🚀 Book Library environment loaded!"
echo "📝 Edit .env file to set GOOGLE_BOOKS_API_KEY"